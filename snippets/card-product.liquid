<!-- snippets/card-product.liquid -->

<div class="card-product group">
  <a href="{{ card_product.url }}" class="block overflow-hidden rounded-lg bg-gray-100">
    {% if card_product.featured_image %}
      <img
        src="{{ card_product.featured_image | image_url: width: 500 }}"
        alt="{{ card_product.featured_image.alt | escape }}"
        class="w-full h-60 object-cover transition-transform duration-500 group-hover:scale-105"
        width="200"
        height="200"
        loading="lazy"
      >
    {% endif %}
  </a>

  <div class="mt-4 text-center">
    <h3 class="text-base font-semibold leading-tight text-[#1F2937] mb-1 truncate">
      {{ card_product.title }}
    </h3>

    <p class="text-[#5BA69F] font-bold text-base mt-1">
      {{ card_product.price | money }}
    </p>
  </div>
</div>
